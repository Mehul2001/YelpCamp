<%include ../partials/header%>
    <div class="container">
        <div class="row">
            <h1 style="text-align:center">Edit
                <%=campgrounds.name%>
            </h1>
            <div style="width:30%; margin:25px auto;">
                <form action="/campgrounds/<%=campgrounds._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input type="text" name="campground[name]" value="<%=campgrounds.name%>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="number" name="campground[price]" value="<%=campgrounds.price%>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="campground[image]" id="" value="<%=campgrounds.image%>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="campground[description]" id="" value="<%=campgrounds.description%>" class="form-control">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-large btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Back</a>
            </div>
        </div>
    </div>
    <%include ../partials/footer%>